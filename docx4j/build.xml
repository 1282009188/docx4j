	<path id="docx4j-001.classpath">
		<pathelement location="bin"/>
		<path refid="EARLibraries.libraryclasspath"/>
		<path refid="MavenDependencies.libraryclasspath"/>
		<!--path refid="JavaFX.userclasspath"/-->
		<pathelement location="lib/parent-pointer-plugin-1.0-SNAPSHOT.jar"/>
		<pathelement location="lib/core-renderer.jar"/>
		<pathelement location="lib/core-renderer-minimal.jar"/>
		<pathelement location="lib/itext-paulo-155.jar"/>
		<pathelement location="lib/minium.jar"/>
		<pathelement location="lib/PDFRenderer.jar"/>
	</path>
	<target name="init">
		<mkdir dir="bin"/>
		<copy includeemptydirs="false" todir="bin">
			<fileset dir="src/main/java" excludes="**/*.launch, **/*.java"/>
		</copy>
		<copy includeemptydirs="false" todir="bin">
			<fileset dir="src/main/resources" excludes="**/*.launch, **/*.java"/>
		</copy>
	</target>
	<target name="clean">
		<delete dir="bin"/>
	</target>
	<target depends="clean" name="cleanall"/>
	<target depends="build-subprojects,build-project" name="build"/>
	<target name="build-subprojects"/>
	
	<target name="build-project" depends="init">
		<echo message="${ant.project.name}: ${ant.file}"/>
		<javac debug="true" debuglevel="${debuglevel}" destdir="bin"
			source="${source}" target="${target}">
			<src path="src/main/java"/>
			<exclude name="org/docx4j/document/wordprocessingml/Paragraph.java"/>
			<exclude
				name="org/docx4j/document/wordprocessingml/ParagraphProperties.java"/>
			<exclude name="org/docx4j/document/wordprocessingml/PStyle.java"/>
			<exclude name="org/docx4j/document/wordprocessingml/rStyle.java"/>
			<exclude name="org/docx4j/document/wordprocessingml/Run.java"/>
			<exclude
				name="org/docx4j/document/wordprocessingml/RunProperties.java"/>
			<exclude
				name="org/docx4j/document/wordprocessingml/SdtProperties.java"/>
			<exclude
				name="org/docx4j/document/wordprocessingml/StructuredDocumentTag.java"/>
			<classpath refid="docx4j-001.classpath"/>
		</javac>
		<javac debug="true" debuglevel="${debuglevel}" destdir="bin"
			source="${source}" target="${target}">
			<src path="src/main/resources"/>
			<classpath refid="docx4j-001.classpath"/>
		</javac>
	</target>
	
	<target depends="build-project" name="dist">
		
		<jar destfile="lib-dist/docx4j-20080117.jar" basedir="bin"/>
		
		<copy todir="lib-dist" flatten="true">
			<!-- requires Ant 1.7.0 -->
			<path>
				<path refid="docx4j-001.classpath"/>
			</path>
		</copy>
	</target>
	
